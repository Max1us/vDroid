<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/verge_colorPrimary</item>
        <item name="colorPrimaryDark">@color/verge_colorPrimaryDark</item>
        <item name="colorAccent">@color/verge_colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenir_next_demibold</item>
    </style>

    <style name="graphtextview">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/verge_colorAccent</item>
    </style>

    <style name="closebutton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:tint">@color/verge_colorPrimary</item>
        <item name="android:src">@drawable/icon_close</item>
    </style>

    <style name="passphrase_check">

    </style>


</resources>
