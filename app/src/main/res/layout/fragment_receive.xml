<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/qrcodeimage"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        >

    </ImageView>

    <TextView
        android:id="@+id/mTransactionsMessageMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/form_rounded_rect"
        android:text="@string/current_qr_code"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/mTransactionsMessageSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/receive_xvg_main"
        android:textAlignment="center"
        android:textSize="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"

        >
        <ImageButton
            android:id="@+id/receive_button_refresh"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/icon_sync"
            android:tint="@color/colorBackground"
            android:adjustViewBounds="true"
            android:padding="17dp"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/receive_button_share"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_upload"
            android:tint="@color/colorBackground"
            android:backgroundTint="@color/colorPrimary"
            android:adjustViewBounds="true"
            android:padding="17dp"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

</LinearLayout>