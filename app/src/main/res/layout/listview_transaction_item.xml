<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listview_transaction_id"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/listview_transaction_item_icon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dip"
        android:tint="@color/colorPrimary"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:paddingLeft="15dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listview_transaction_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/listview_item_icon"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/listview_transaction_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/listview_item_icon"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/listview_transaction_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="0.4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/listview_item_icon"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        />



</LinearLayout>